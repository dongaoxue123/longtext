* {margin: 0;padding: 0;font-family: "arial, helvetica, sans-serif";font-family:"微软雅黑";}
html ,body {height: 100%;font-size: 16px;}
body{color:#333;background:#fff;margin:0;position:relative;}
p,form,ol,ul,li,dl,dt,dd,h3{margin:0;padding:0;list-style:none}
input{padding-top:0;padding-bottom:0;-moz-box-sizing:border-box;-webkit-box-sizing:border-box;box-sizing:border-box}
table,img{border:0}
.tc{text-align: center;}
.tr{text-align: right;}
.fl{float: left;}
.fr{float: right;}
.flex{display: flex;}
a{color: #333;}
input[type="text"],input[type="button"], input[type="submit"], input[type="reset"] {
	-webkit-appearance: none;
	appearance: none;
}
textarea { -webkit-appearance: none;}   
.button{ border-radius: 0; } 

select{
	appearance: none;
	-webkit-appearance: none;
	text-indent: 5px;
}
select::-ms-expand { display: none; }

h1{font-size: 30px;font-weight: 400;}
h2{font-size: 26px;font-weight: 400;}
h3{font-size: 20px;font-weight: 400;}
h4{font-size: 16px;font-weight: 400;}
h5{font-size: 14px;font-weight: 400;}
h6{font-size: 12px;font-weight: 400;}

.pd20{padding: 20px;}
.pb20{padding-bottom: 20px;}
.pl20{padding-left: 20px;}
.mr10{margin-right: 10px;};
.mr20{margin-right: 20px;};

