@Service("fieldHogWeightDaoImpl")
public class FieldHogWeightDaoImpl extends BaseDaoImpl<ScreenNumberBean> implements FieldHogWeightDao {

	private final Logger logger = LoggerFactory.getLogger(FieldHogWeightDaoImpl.class);

	private final String namespace = "com.xlqx.znyz.screen.mapper.FieldHogWeightMapper.";

	private String sqlId(String method) {
		return namespace + method;
	}

	@Override
	public List<FieldHogWeightRowsBean> getList(Map<String, Object> parameter) {
		logger.info("fieldHogWeightDaoImpl ==> getList()");

		return getWriteSession().selectList(sqlId("getList"), parameter);
	}

}
