package com.xlqx.znyz.screen.service.impl;

import java.util.List;
import java.util.Map;

import org.apache.commons.lang.StringUtils;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.xlqx.znyz.core.constant.PaginationContext;
import com.xlqx.znyz.screen.bean.ScreenNumberBean;
import com.xlqx.znyz.screen.dao.ScreenNumberDao;
import com.xlqx.znyz.screen.service.ScreenNumberService;


/**
 * 大屏幕猪只数量Service
 * 
 * @author wangshoujian
 *
 */

@Service("screenNumberServiceImpl")
public class ScreenNumberServiceImpl implements ScreenNumberService {
	
	private final Logger logger = LoggerFactory.getLogger(ScreenNumberServiceImpl.class);
	
	@Autowired
	private ScreenNumberDao screenNumberDao;
	/**
	 * 查询猪只数量列表（分页）
	 *
	 * @author wangshoujian
	 * @createDate 2019年7月10日
	 *
	 * @param parameter
	 * @return
	 */
	@Override
	public List<ScreenNumberBean> getList(Map<String, Object> parameter, String pageNum, String pageSize) {
		logger.info("screenNumberServiceImpl{}==>getList()");
		int pageNumInt=0;
		int pageSizeInt=0;
		if (StringUtils.isNumeric(pageNum)) {
			 pageNumInt = Integer.parseInt(pageNum);
		}
		if (StringUtils.isNumeric(pageSize)) {
			 pageSizeInt = Integer.parseInt(pageSize);
		}
		PaginationContext.setPageNum(pageNumInt);
		PaginationContext.setPageSize(pageSizeInt);
		return screenNumberDao.getList(parameter);
	}

	
}
