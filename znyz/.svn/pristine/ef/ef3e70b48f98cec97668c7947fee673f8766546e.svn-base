<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper
	namespace="com.xlqx.znyz.screen.mapper.FieldHogWeightMapper">

	<!-- 根据日期查询测重记录 -->
	<select id="getList" parameterType="map"
		resultType="com.xlqx.znyz.screen.bean.FieldHogWeightRowsBean">
		SELECT
		DATE_FORMAT(weight_time,'%Y-%c-%d %h:%i:%s') AS date,
		weight_data AS weight
		FROM
		${tableName}
		WHERE
		field_id = '${fieldId}'
		ORDER BY
		weight_time DESC
		LIMIT 0,10
	</select>

</mapper>