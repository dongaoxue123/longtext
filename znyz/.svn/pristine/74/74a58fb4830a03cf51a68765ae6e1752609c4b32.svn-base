body{
	margin: 0;
	padding: 0;
	background: #fff;
}
 input::-webkit-input-placeholder{
            color:#fff;
        }
        input::-moz-placeholder{   /* Mozilla Firefox 19+ */
            color:#fff;
        }
        input:-moz-placeholder{    /* Mozilla Firefox 4 to 18 */
            color:#fff;
        }
        input:-ms-input-placeholder{  /* Internet Explorer 10-11 */ 
            color:#fff;
        }
.bg{
	width: 100%;
	height: auto;
	overflow: hidden;
	position: relative;
}
.logo{
	width: 40%;
	height: auto;
	overflow: hidden;
	position: absolute;
	top: 85px;
	left: 10%;
}
.log_in{
	width: 39.4375rem;
	height: 31.3125rem;
	background: url(../img/border_07.png) no-repeat;
	background-size: 100%;
	position: absolute;
	bottom: 246px;
	left: 10%;
}
.log_title{
	width: 100%;
	height: 60px;
	line-height: 60px;
	text-align: center;
	font-size: 40px;
	letter-spacing:20px;
	color: #FFFFFF;
	margin-top: 18px;
}
.log_input{
	width: 75%;
	height: 1.5rem;
	
	background: rgba(0,150,136,0.3);
	border: 2px solid #016d69;
	margin: 0 auto;
	margin-top: 25px;
	padding: 14px 5%;
}
.input select{
	width: 94%;
	border: none;
	display: block;
	background: none;
	height: 100%;
	outline:none;
	font-size: 18px;
	color: #FFFFFF;
	-webkit-appearance: none;
  -webkit-tap-highlight-color: #fff;
  outline: 0;
  margin: 0;
}
.mark{
	width: 23px;
	height: 23px;
	float: left;
	
}
.input{
	width: 424px;
	height: 100%;
	float: left;
	margin-left: 12px;
}
.input input{
	width: 100%;
	border: none;
	display: block;
	background: none;
	height: 100%;
	outline:none;
	font-size: 1.25rem;
	color: #FFFFFF;
}
.btn{
	width: 515px;
	height: 56px;
	line-height: 56px;
	margin: 0 auto;
	margin-top: 32px;
	background: #009688;
	border-radius: 25px;
    color: #fff;
    text-align: center;    
    font-size: 20px;
}
