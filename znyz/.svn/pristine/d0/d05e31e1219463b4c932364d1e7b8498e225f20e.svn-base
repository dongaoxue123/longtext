import org.springframework.web.bind.annotation.RestController;

import com.xlqx.znyz.core.screendatasourcebean.FieldDeviceDataBean;
import com.xlqx.znyz.core.screendatasourcebean.FieldDeviceDataSource;

/**
 * 猪场栏位设备Controller
