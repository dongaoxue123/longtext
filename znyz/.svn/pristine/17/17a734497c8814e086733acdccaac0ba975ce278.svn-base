	<script>
		var authToken = localStorage.getItem('authToken');// 取得authToken
		var roleId = localStorage.getItem("roleId");
		$(document).ready(function() {
			initFunction();
		});
		function initFunction(){
			$.ajax({
				type:"get",
				url: commonIP + "api/system/roleperms/get?authToken="+authToken+'&roleId='+roleId,
				contentType: 'application/json',
				dataType:'json',
				async:true,
				success:function(data){
					console.log(data)
					if (data) {
						var str = '';
						if (data.errcode == 200) {
							var arr = new Array();
							for (var key in data.dataSource.list) {
								var linkUrl = data.dataSource.list[key].linkUrl;
								if(linkUrl == 'BodyScoreStatistics.html'){
									str = str+'<div class="iconBox" onclick="location=\'BodyScoreStatistics.html\'"><span class="iconfont icon-pig"></span><h4>体况评分统计</h4></div>';
								}else if(linkUrl == 'ReserveSowStatistics.html'){
									str = str+'<div class="iconBox" onclick="location=\'ReserveSowStatistics.html\'"><span class="iconfont icon-weibiaoti1"></span><h4>后备母猪统计</h4></div>';
								}else if(linkUrl == 'GradingStandard.html'){
									str = str+'<div class="iconBox" onclick="location=\'GradingStandard.html\'"><span class="iconfont icon-shezhi"></span><h4>膘情与评分</h4></div>';
								}
							}
							$("#countFunction").append(str);
						} else {
							if (data.errcode == "10005") {
								window.top.location.href = 'wxlogin.html';
							}
						}
					}
				
				}
			});
		}
	</script>
